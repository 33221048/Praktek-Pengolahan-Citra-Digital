# Import library yang diperlukan
from PIL import Image
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Crop gambar (x1, y1, x2, y2)
cropped_image = image.crop((50, 50, 200, 200))  # Koordinat crop (kiri, atas, kanan, bawah)

# Langkah 4: Tampilkan gambar asli dan hasil crop
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image)
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil crop
plt.subplot(1, 2, 2)
plt.imshow(cropped_image)
plt.title("Gambar Hasil Crop")
plt.axis('off')

plt.tight_layout()
plt.show()
