# Import library yang diperlukan
from PIL import Image
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Konversi gambar ke Grayscale
image_grayscale = image.convert("L")

# Langkah 4: Tampilkan gambar asli dan hasil konversi
plt.figure(figsize=(10, 5))

# Gambar asli (RGB)
plt.subplot(1, 2, 1)
plt.imshow(image)
plt.title("Gambar Asli (RGB)")
plt.axis('off')

# Gambar Grayscale
plt.subplot(1, 2, 2)
plt.imshow(image_grayscale, cmap='gray')  # Gunakan colormap 'gray' untuk grayscale
plt.title("Gambar Grayscale")
plt.axis('off')

plt.tight_layout()
plt.show()
