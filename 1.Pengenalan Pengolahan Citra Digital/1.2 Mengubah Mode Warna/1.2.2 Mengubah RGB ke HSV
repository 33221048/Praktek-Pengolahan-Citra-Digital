# Import library yang diperlukan
from PIL import Image
import matplotlib.pyplot as plt
import numpy as np

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Konversi gambar ke HSV
image_hsv = image.convert("HSV")

# Langkah 4: Ekstrak masing-masing komponen HSV
hsv_array = np.array(image_hsv)  # Konversi ke array NumPy
hue = hsv_array[:, :, 0]         # Komponen Hue
saturation = hsv_array[:, :, 1]  # Komponen Saturation
value = hsv_array[:, :, 2]       # Komponen Value

# Langkah 5: Tampilkan gambar asli dan komponen HSV
plt.figure(figsize=(15, 5))

# Gambar asli (RGB)
plt.subplot(1, 4, 1)
plt.imshow(image)
plt.title("Gambar Asli (RGB)")
plt.axis('off')

# Komponen Hue
plt.subplot(1, 4, 2)
plt.imshow(hue, cmap='hsv')  # Gunakan colormap 'hsv' untuk Hue
plt.title("Komponen Hue")
plt.axis('off')

# Komponen Saturation
plt.subplot(1, 4, 3)
plt.imshow(saturation, cmap='gray')  # Gunakan colormap 'gray' untuk Saturation
plt.title("Komponen Saturation")
plt.axis('off')

# Komponen Value
plt.subplot(1, 4, 4)
plt.imshow(value, cmap='gray')  # Gunakan colormap 'gray' untuk Value
plt.title("Komponen Value")
plt.axis('off')

plt.tight_layout()
plt.show()
