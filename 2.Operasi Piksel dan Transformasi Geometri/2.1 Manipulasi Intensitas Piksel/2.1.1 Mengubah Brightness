# Import library yang diperlukan
from PIL import Image, ImageEnhance
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Ubah brightness menggunakan ImageEnhance
enhancer = ImageEnhance.Brightness(image)
brightness_factor = 1.5  # Faktor brightness (1.0 = normal, >1.0 = lebih terang, <1.0 = lebih gelap)
brightened_image = enhancer.enhance(brightness_factor)

# Langkah 4: Tampilkan gambar asli dan hasil manipulasi
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image)
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil manipulasi brightness
plt.subplot(1, 2, 2)
plt.imshow(brightened_image)
plt.title(f"Brightness x {brightness_factor}")
plt.axis('off')

plt.tight_layout()
plt.show()
