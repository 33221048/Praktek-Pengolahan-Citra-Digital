# Import library yang diperlukan
from PIL import Image, ImageEnhance
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Ubah contrast menggunakan ImageEnhance
enhancer = ImageEnhance.Contrast(image)
contrast_factor = 1.5  # Faktor contrast (1.0 = normal, >1.0 = lebih kontras, <1.0 = kurang kontras)
contrasted_image = enhancer.enhance(contrast_factor)

# Langkah 4: Tampilkan gambar asli dan hasil manipulasi
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image)
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil manipulasi contrast
plt.subplot(1, 2, 2)
plt.imshow(contrasted_image)
plt.title(f"Contrast x {contrast_factor}")
plt.axis('off')

plt.tight_layout()
plt.show()
