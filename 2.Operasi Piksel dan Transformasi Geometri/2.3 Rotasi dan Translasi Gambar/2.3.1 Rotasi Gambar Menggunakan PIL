# Import library yang diperlukan
from PIL import Image
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan PIL
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = Image.open(image_path)

# Langkah 3: Rotasi gambar
angle = 45  # Sudut rotasi dalam derajat
rotated_image = image.rotate(angle, expand=True)  # expand=True agar ukuran gambar menyesuaikan setelah rotasi

# Langkah 4: Tampilkan gambar asli dan hasil rotasi
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image)
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil rotasi
plt.subplot(1, 2, 2)
plt.imshow(rotated_image)
plt.title(f"Rotasi {angle}Â°")
plt.axis('off')

plt.tight_layout()
plt.show()
