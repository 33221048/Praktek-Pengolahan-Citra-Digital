# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_rgb = cv2.cvtColor(image, cv2.COLOR_BGR2RGB)  # Konversi ke RGB

# Langkah 3: Tentukan matriks rotasi dan translasi
height, width = image.shape[:2]
center = (width // 2, height // 2)  # Titik pusat rotasi
angle = 30  # Sudut rotasi dalam derajat
scale = 1.0  # Skala gambar tetap sama
rotation_matrix = cv2.getRotationMatrix2D(center, angle, scale)

# Tambahkan translasi ke matriks rotasi
tx, ty = 50, 30  # Offset translasi
rotation_matrix[0, 2] += tx
rotation_matrix[1, 2] += ty

# Langkah 4: Terapkan rotasi dan translasi
rotated_translated_image = cv2.warpAffine(image_rgb, rotation_matrix, (width, height))

# Langkah 5: Tampilkan gambar asli dan hasil transformasi
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image_rgb)
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil rotasi dan translasi
plt.subplot(1, 2, 2)
plt.imshow(rotated_translated_image)
plt.title(f"Rotasi {angle}Â° + Translasi (tx={tx}, ty={ty})")
plt.axis('off')

plt.tight_layout()
plt.show()
