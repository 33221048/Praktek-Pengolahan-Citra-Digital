# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Tambahkan noise Gaussian ke gambar
mean = 0
sigma = 25
noisy_image = image_gray + np.random.normal(mean, sigma, image_gray.shape).astype(np.uint8)

# Langkah 4: Terapkan filter Gaussian dengan kernel berbeda
kernel_sizes = [(3, 3), (5, 5), (9, 9)]
smoothed_images = [cv2.GaussianBlur(noisy_image, k, 0) for k in kernel_sizes]

# Langkah 5: Tampilkan hasil perbandingan
plt.figure(figsize=(15, 5))

# Gambar dengan noise
plt.subplot(1, len(kernel_sizes) + 1, 1)
plt.imshow(noisy_image, cmap='gray')
plt.title("Gambar dengan Noise")
plt.axis('off')

# Gambar hasil smoothing untuk setiap kernel
for i, smoothed_image in enumerate(smoothed_images):
    plt.subplot(1, len(kernel_sizes) + 1, i + 2)
    plt.imshow(smoothed_image, cmap='gray')
    plt.title(f"Gaussian {kernel_sizes[i]}")
    plt.axis('off')

plt.tight_layout()
plt.show()
