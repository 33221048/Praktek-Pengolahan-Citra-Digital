# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_rgb = cv2.cvtColor(image, cv2.COLOR_BGR2RGB)  # Konversi ke RGB
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Tambahkan noise Gaussian ke gambar
mean = 0  # Mean dari distribusi Gaussian
sigma = 25  # Deviasi standar (intensitas noise)
noisy_image = image_gray + np.random.normal(mean, sigma, image_gray.shape).astype(np.uint8)

# Langkah 4: Terapkan filter Gaussian
kernel_size = (5, 5)  # Ukuran kernel (misalnya 5x5)
sigma_x = 0  # Deviasi standar dalam arah x (0 = otomatis dihitung oleh OpenCV)
smoothed_image = cv2.GaussianBlur(noisy_image, kernel_size, sigma_x)

# Langkah 5: Tampilkan gambar asli, gambar dengan noise, dan hasil smoothing
plt.figure(figsize=(15, 5))

# Gambar asli
plt.subplot(1, 3, 1)
plt.imshow(image_gray, cmap='gray')
plt.title("Gambar Asli")
plt.axis('off')

# Gambar dengan noise
plt.subplot(1, 3, 2)
plt.imshow(noisy_image, cmap='gray')
plt.title("Gambar dengan Noise")
plt.axis('off')

# Gambar hasil smoothing
plt.subplot(1, 3, 3)
plt.imshow(smoothed_image, cmap='gray')
plt.title(f"Smoothing (Gaussian {kernel_size})")
plt.axis('off')

plt.tight_layout()
plt.show()
