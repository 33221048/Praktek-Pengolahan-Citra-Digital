# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Terapkan Sobel Filter
sobel_x = cv2.Sobel(image_gray, cv2.CV_64F, 1, 0, ksize=3)  # Gradien horizontal
sobel_y = cv2.Sobel(image_gray, cv2.CV_64F, 0, 1, ksize=3)  # Gradien vertikal

# Langkah 4: Hitung magnitude gradien
magnitude = np.sqrt(sobel_x**2 + sobel_y**2)
magnitude = np.uint8(magnitude / magnitude.max() * 255)  # Normalisasi ke rentang 0-255

# Langkah 5: Tampilkan hasil deteksi tepi
plt.figure(figsize=(15, 5))

# Gambar asli
plt.subplot(1, 3, 1)
plt.imshow(image_gray, cmap='gray')
plt.title("Gambar Asli (Grayscale)")
plt.axis('off')

# Gradien horizontal
plt.subplot(1, 3, 2)
plt.imshow(np.abs(sobel_x), cmap='gray')
plt.title("Gradien Horizontal")
plt.axis('off')

# Gradien vertikal
plt.subplot(1, 3, 3)
plt.imshow(np.abs(sobel_y), cmap='gray')
plt.title("Gradien Vertikal")
plt.axis('off')

plt.tight_layout()
plt.show()

# Tampilkan magnitude gradien
plt.figure(figsize=(5, 5))
plt.imshow(magnitude, cmap='gray')
plt.title("Magnitude Gradien (Tepi)")
plt.axis('off')
plt.show()
