# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Terapkan Sobel Filter
sobel_x = cv2.Sobel(image_gray, cv2.CV_64F, 1, 0, ksize=3)
sobel_y = cv2.Sobel(image_gray, cv2.CV_64F, 0, 1, ksize=3)
magnitude = np.sqrt(sobel_x**2 + sobel_y**2)
sobel_edges = np.uint8(magnitude / magnitude.max() * 255)

# Langkah 4: Terapkan Canny Edge Detector
canny_edges = cv2.Canny(image_gray, threshold1=100, threshold2=200)

# Langkah 5: Tampilkan hasil perbandingan
plt.figure(figsize=(15, 5))

# Sobel Filter
plt.subplot(1, 2, 1)
plt.imshow(sobel_edges, cmap='gray')
plt.title("Sobel Filter")
plt.axis('off')

# Canny Edge Detector
plt.subplot(1, 2, 2)
plt.imshow(canny_edges, cmap='gray')
plt.title("Canny Edge Detector")
plt.axis('off')

plt.tight_layout()
plt.show()
