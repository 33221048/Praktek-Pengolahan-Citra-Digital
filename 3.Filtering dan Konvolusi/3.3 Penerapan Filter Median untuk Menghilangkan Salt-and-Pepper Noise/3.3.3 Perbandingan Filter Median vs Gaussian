# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Tambahkan noise Salt-and-Pepper ke gambar
def add_salt_and_pepper_noise(image, salt_prob, pepper_prob):
    noisy_image = image.copy()
    total_pixels = image.size

    # Tambahkan salt noise (piksel putih)
    num_salt = int(total_pixels * salt_prob)
    salt_coords = [np.random.randint(0, i - 1, num_salt) for i in image.shape]
    noisy_image[salt_coords[0], salt_coords[1]] = 255

    # Tambahkan pepper noise (piksel hitam)
    num_pepper = int(total_pixels * pepper_prob)
    pepper_coords = [np.random.randint(0, i - 1, num_pepper) for i in image.shape]
    noisy_image[pepper_coords[0], pepper_coords[1]] = 0

    return noisy_image

salt_prob = 0.02
pepper_prob = 0.02
noisy_image = add_salt_and_pepper_noise(image_gray, salt_prob, pepper_prob)

# Langkah 4: Terapkan filter median dan Gaussian
median_smoothed = cv2.medianBlur(noisy_image, 5)
gaussian_smoothed = cv2.GaussianBlur(noisy_image, (5, 5), 0)

# Langkah 5: Tampilkan hasil perbandingan
plt.figure(figsize=(15, 5))

# Gambar dengan noise
plt.subplot(1, 3, 1)
plt.imshow(noisy_image, cmap='gray')
plt.title("Gambar dengan Noise")
plt.axis('off')

# Gambar hasil Median Filter
plt.subplot(1, 3, 2)
plt.imshow(median_smoothed, cmap='gray')
plt.title("Median Filter")
plt.axis('off')

# Gambar hasil Gaussian Filter
plt.subplot(1, 3, 3)
plt.imshow(gaussian_smoothed, cmap='gray')
plt.title("Gaussian Filter")
plt.axis('off')

plt.tight_layout()
plt.show()
