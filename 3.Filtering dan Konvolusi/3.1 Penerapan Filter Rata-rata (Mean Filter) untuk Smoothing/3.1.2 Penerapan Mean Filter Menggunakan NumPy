# Import library yang diperlukan
import cv2
import numpy as np
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Buat kernel mean filter secara manual
kernel_size = 5
kernel = np.ones((kernel_size, kernel_size), dtype=np.float32) / (kernel_size ** 2)

# Langkah 4: Terapkan konvolusi menggunakan NumPy
padded_image = np.pad(image_gray, ((kernel_size//2, kernel_size//2), (kernel_size//2, kernel_size//2)), mode='edge')
smoothed_image = np.zeros_like(image_gray)

for i in range(image_gray.shape[0]):
    for j in range(image_gray.shape[1]):
        smoothed_image[i, j] = np.sum(padded_image[i:i+kernel_size, j:j+kernel_size] * kernel)

# Langkah 5: Tampilkan gambar asli dan hasil smoothing
plt.figure(figsize=(10, 5))

# Gambar asli
plt.subplot(1, 2, 1)
plt.imshow(image_gray, cmap='gray')
plt.title("Gambar Asli (Grayscale)")
plt.axis('off')

# Gambar hasil smoothing
plt.subplot(1, 2, 2)
plt.imshow(smoothed_image, cmap='gray')
plt.title(f"Smoothing (Mean Filter {kernel_size}x{kernel_size})")
plt.axis('off')

plt.tight_layout()
plt.show()
