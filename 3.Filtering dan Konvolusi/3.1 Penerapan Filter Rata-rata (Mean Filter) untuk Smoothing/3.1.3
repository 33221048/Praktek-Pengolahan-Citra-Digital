# Import library yang diperlukan
import cv2
import matplotlib.pyplot as plt

# Langkah 1: Upload gambar ke Google Colab
from google.colab import files
uploaded = files.upload()

# Langkah 2: Baca gambar menggunakan OpenCV
image_path = list(uploaded.keys())[0]  # Ambil nama file yang diupload
image = cv2.imread(image_path)
image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  # Konversi ke grayscale

# Langkah 3: Terapkan mean filter dengan kernel berbeda
kernel_sizes = [3, 5, 9]
smoothed_images = [cv2.blur(image_gray, (k, k)) for k in kernel_sizes]

# Langkah 4: Tampilkan hasil perbandingan
plt.figure(figsize=(15, 5))

# Gambar asli
plt.subplot(1, len(kernel_sizes) + 1, 1)
plt.imshow(image_gray, cmap='gray')
plt.title("Gambar Asli")
plt.axis('off')

# Gambar hasil smoothing untuk setiap kernel
for i, smoothed_image in enumerate(smoothed_images):
    plt.subplot(1, len(kernel_sizes) + 1, i + 2)
    plt.imshow(smoothed_image, cmap='gray')
    plt.title(f"Kernel {kernel_sizes[i]}x{kernel_sizes[i]}")
    plt.axis('off')

plt.tight_layout()
plt.show()
